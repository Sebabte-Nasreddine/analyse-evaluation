# Application Settings
APP_NAME=Formation Evaluation Analysis
VERSION=1.0.0
DEBUG=True

# API
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://evaluser:evalpass@localhost:5432/evaluation_db

# Redis
REDIS_URL=redis://localhost:6379/0

# NLP Models
MODEL_CACHE_DIR=./models_cache

# Modèles de sentiment par langue
FRENCH_SENTIMENT_MODEL=cmarkea/distilcamembert-base-sentiment
ARABIC_SENTIMENT_MODEL=CAMeL-Lab/bert-base-arabic-camelbert-msa-sentiment
DARIJA_MODEL=SI2M-Lab/DarijaBERT

# Topic Modeling
USE_BERTOPIC=True
MIN_TOPIC_SIZE=5

# Clustering
CLUSTERING_METHOD=kmeans
MIN_CLUSTER_SIZE=5

# Nombre max de clusters testés pour auto-détection (méthode du coude)
# Modifiez cette valeur pour changer le maximum testé (ex: 8, 12, 15)
MAX_CLUSTERS=10

# Nombre fixe de clusters (optionnel)
# Si défini, ce nombre sera utilisé au lieu de l'auto-détection
# Décommentez et définissez une valeur pour forcer un nombre spécifique
# DEFAULT_N_CLUSTERS=5

# File Upload
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=.csv,.pdf,.xlsx

# Processing
BATCH_SIZE=32
MAX_WORKERS=4
